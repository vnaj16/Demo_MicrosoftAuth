@model Demo_MicrosoftAuth.Models.LoginRequest

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

    <div class="login-container">
        <div class="text-center">
            <img src="~/Images/novoappadmin.png" height="80" />
        </div>

        <form asp-action="ValidateLogin" asp-controller="Home">
            <div class="form-group">
                <label for="Username">Usuario</label>
                <input asp-for=Username class="form-control" placeholder="Usuario" />
            </div>
            <div class="form-group">
                <label for="Password">Contraseña</label>
                <input asp-for=Password type="password" class="form-control" placeholder="Contraseña" />
            </div>

            <div class="form-group text-center">
                <button class="btn btn-primary" type="submit">Ingresar</button>
            </div>
        </form>
    </div>